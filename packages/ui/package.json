{
  "name": "@error-mock/ui",
  "version": "0.0.1",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./react": {
      "import": "./dist/react/index.js",
      "types": "./dist/react/index.d.ts"
    },
    "./style.css": "./dist/style.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rm -rf dist && vite build",
    "build:react": "vite build --config vite.react.config.ts",
    "dev": "nodemon --watch src --watch tailwind.config.* --watch postcss.config.* --watch tsconfig.* --ext svelte,ts,js,css --exec \"vite build\"",
    "dev:react": "nodemon --watch src/react --watch tailwind.config.* --ext ts,tsx,css --exec \"vite build --config vite.react.config.ts\"",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@error-mock/core": "workspace:*",
    "@melt-ui/svelte": "^0.86.6",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-slot": "^1.2.4",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.560.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "svelte": "^4.2.8",
    "tailwind-merge": "^2.6.0",
    "tailwindcss-animate": "^1.0.7",
    "tw-animate-css": "^1.4.0"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    }
  },
  "devDependencies": {
    "@melt-ui/pp": "^0.3.2",
    "@sveltejs/vite-plugin-svelte": "^3.0.1",
    "@tailwindcss/vite": "^4.1.0",
    "@tsconfig/svelte": "^5.0.2",
    "@types/react": "^18.2.64",
    "@types/react-dom": "^18.2.21",
    "@vitejs/plugin-react": "^4.2.1",
    "fast-deep-equal": "^3.1.3",
    "nodemon": "^3.1.11",
    "svelte-preprocess": "^6.0.3",
    "tailwindcss": "^4.1.0",
    "tsup": "^8.0.0",
    "vite": "^5.0.10",
    "vite-plugin-dts": "^3.7.0"
  }
}
